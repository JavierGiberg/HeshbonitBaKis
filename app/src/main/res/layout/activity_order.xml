
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/heshbonit"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הנפקת הזמנת עבודה"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/order_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_go_home_order"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:drawableBottom="@drawable/ic_baseline_home_24" />

        <EditText
            android:id="@+id/ed_client_name_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="*לכבוד"
            android:maxLength="30"/>

        <EditText
            android:id="@+id/ed_client_adress_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="*כתובת"
            android:maxLength="40"/>

        <EditText
            android:id="@+id/ed_client_tel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*הכנס מספר טלפון"
            android:inputType="number"
            android:maxLength="10"/>

        <EditText
            android:id="@+id/ed_client_Description_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*תיאור העבודה"
            android:inputType="text"
            android:maxLength="70" />

        <EditText
            android:id="@+id/ed_client_Description1_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="תנאי תשלום"
            android:inputType="text"
            android:maxLength="70" />

        <EditText
            android:id="@+id/ed_client_Description2_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="70"
            android:inputType="text"
            android:hint="הערות" />

        <EditText
            android:id="@+id/ed_client_date_order_deliveri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint=" *תאריך אספקה dd/mm/yy"
            android:inputType="text"
            android:maxLength="8" />

        <EditText
            android:id="@+id/ed_client_price_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*מחיר לא כולל מע'מ"
            android:maxLength="12"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/ed_client_date_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint=" *תאריך הנפקה dd/mm/yy"
            android:inputType="text"
            android:maxLength="8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    *שדות חובה"/>

        <Button
            android:id="@+id/btn_save_recive_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="הנפק ושמור חשבונית"
            />

    </LinearLayout>
</LinearLayout>